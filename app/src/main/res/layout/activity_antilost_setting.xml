<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/system_image_search"
        android:background="@color/headbg"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/system_image_search"
            android:background="@drawable/back_selector"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp">
        </ImageView>

        <TextView
            android:id="@+id/device_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Anti lost"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:layout_weight="1"
            style="@style/text_head" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anti lost"
            android:id="@+id/textView"
            android:textSize="18sp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical" />
        
        <Switch
            android:id="@+id/switch1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1e6115"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device alert"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textView1"
            android:textColor="@color/text_white"
            android:layout_gravity="center_vertical"
            android:gravity="left"
             />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light"
            android:id="@+id/textView2"
            android:textSize="18sp"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical" />
</LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1e6115"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarm distance set"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textView3"
            android:textColor="@color/text_white"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="5dp">

      <Button
          android:id="@+id/btn_near"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:text="near"
          android:textSize="18sp"
          android:background="#ffffffff"
          android:clickable="true"
          android:enabled="true"
          android:focusable="true" />

        <Button
            android:id="@+id/btn_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="middle"
            android:textSize="18sp"
            android:clickable="true"
            android:enabled="true"
            android:background="#ffffffff"
            android:focusable="true" />

        <Button
            android:id="@+id/btn_far"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="far"
            android:background="#ffffffff"
            android:enabled="true"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#1e6115"
    android:layout_gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone alert"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:id="@+id/textView4"
        android:textColor="@color/text_white"
        android:layout_gravity="center_vertical"
        android:gravity="left"
        />
</FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/arrow_right"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_weight="5"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/arrow_right"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#dddddd">

    </View>

    <LinearLayout
        android:id="@+id/ll_ringtone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginRight="5dp"
        android:background="#ffffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:focusable="true"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ringtone"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/ivRingtone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/arrow_right"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#dddddd">

    </View>
</LinearLayout>