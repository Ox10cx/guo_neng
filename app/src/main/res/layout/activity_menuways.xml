<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/headbg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/null_btn_text"
            android:padding="10dp"
            android:src="@drawable/back_selector" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/shop_detail_shop_detail"
            android:textColor="#FFFFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menuway_bg"
        android:orientation="horizontal"
        android:paddingTop="50dp" >

        <Button
            android:id="@+id/bookmenubtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_text"
            android:padding="10dp"
            android:text="@string/menuways_bookmenu"
            android:textColor="@color/text_white" />

        <Button
            android:id="@+id/shopmenubtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_text"
            android:padding="10dp"
            android:text="@string/menuways_shopmenu"
            android:textColor="@color/text_white" />
    </LinearLayout>

</LinearLayout>