<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@color/headbg"
        android:contentDescription="@string/system_image_search"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/layout_size_50"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/null_btn_text"
            android:padding="10dp"
            android:src="@drawable/back_selector"></ImageView>

        <TextView
            android:id="@+id/device_text"
            style="@style/text_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_link_device"
            android:textColor="@color/text_white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/wifi_imei"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_selector"
            android:hint="@string/str_input_imei"
            android:inputType="text" />

        <EditText
            android:id="@+id/wifi_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edittext_selector"
            android:hint="@string/str_input_id"
            android:inputType="text" />

        <Button
            android:id="@+id/link"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn_text"
            android:text="@string/str_link_device"
            android:textColor="@color/text_white" />

    </LinearLayout>
</LinearLayout>