<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_size_80"
    android:background="@drawable/listview_item_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/device_image"
        android:layout_width="@dimen/layout_size_30"
        android:layout_height="@dimen/layout_size_70"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_size_20"
        android:scaleType="centerCrop"
        android:src="@drawable/wifi_device" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/layout_size_5"
        android:layout_marginLeft="@dimen/layout_size_15"
        android:layout_marginTop="@dimen/layout_size_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/device_name"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/device_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/device_status"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/device_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <ImageView
            android:id="@+id/iv_device_status"
            android:layout_width="@dimen/layout_size_50"
            android:layout_height="@dimen/layout_size_50"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/layout_size_20"
            android:scaleType="centerCrop"
            android:src="@drawable/off" />
    </LinearLayout>

</LinearLayout>
