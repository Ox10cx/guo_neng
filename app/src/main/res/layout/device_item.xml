<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:showDividers="beginning">

    <ImageView
        android:id="@+id/device_image"
        android:layout_width="@dimen/layout_size_40"
        android:layout_height="@dimen/layout_size_40"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/layout_size_10"
        android:scaleType="centerCrop"
        android:src="@drawable/wifi_device" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/layout_size_5"
        android:layout_marginLeft="@dimen/layout_size_10"
        android:layout_marginTop="@dimen/layout_size_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/device_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="test"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right">

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="@dimen/layout_size_30"
            android:layout_height="@dimen/layout_size_30"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/device_click_arrow" />
    </LinearLayout>

</LinearLayout>
