<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/second"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#ffffff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headbg" >
        
 <ImageView
                android:id="@+id/back"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/arrow_left"
	            android:padding="10dp"
	            android:background="@drawable/null_btn_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/person_mycoin_text_title"
            style="@style/text_head"
            android:layout_marginRight="50dp"
            />
        
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/personinformationPhoto" 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp" >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            
            <ImageView 
                android:id="@+id/head_image"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:scaleType="fitXY"/>
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/person_mycoin_text_mycoin"
	            android:gravity="center_vertical"
	            android:layout_marginLeft="10dp"
	            android:layout_marginStart="10dp"/>
	        
	        <TextView 
	            android:id="@+id/personmycoinTextCoin" 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="0"
	            android:gravity="center_vertical"/>
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:text="@string/person_mycoin_text_coin"
	            android:gravity="center_vertical"/>
            
        </LinearLayout>
        
        
        <Button
            android:id="@+id/personmycoinButtonDeposit" 
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:textColor="@color/text_white"
            android:background="@drawable/blue_btn_text"
            android:text="@string/person_mycoin_text_deposit"
            android:textSize="12sp">
            
        </Button>
    </RelativeLayout>
	
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    
    <ListView 
        android:id="@+id/personmycoinList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></ListView>
    
    
    
</LinearLayout>