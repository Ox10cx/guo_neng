<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/system_image_search"
        android:background="@color/headbg"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/system_image_search"
            android:background="@drawable/back_selector"
            android:focusable="true"
            android:visibility="invisible"
            android:clickable="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp">
        </ImageView>

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/str_setup_pass"
            android:textColor="@color/text_white"
            android:textSize="18sp"
            android:layout_weight="1"
            style="@style/text_head" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
    <TextView
        android:id="@+id/tv_password_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_enter_pass"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_password"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/password_size"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:layout_width="@dimen/password_size"
                android:layout_height="@dimen/password_size"
                android:inputType="number"
                android:ems="1"
                android:id="@+id/editText1"
                android:layout_centerInParent="true"
                android:maxLength="1"
                android:numeric="integer"
                android:password="true"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >

            <EditText
                android:layout_width="@dimen/password_size"
                android:layout_height="@dimen/password_size"
                android:inputType="number"
                android:ems="1"
                android:id="@+id/editText2"
                android:layout_centerInParent="true"
                android:maxLength="1"
                android:numeric="integer"
                android:password="true"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <EditText
            android:layout_width="@dimen/password_size"
            android:layout_height="@dimen/password_size"
            android:inputType="number"
            android:ems="1"
            android:id="@+id/editText3"
            android:layout_centerInParent="true"
            android:maxLength="1"
            android:numeric="integer"
            android:password="true"
            android:singleLine="true"
             />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <EditText
            android:layout_width="@dimen/password_size"
            android:layout_height="@dimen/password_size"

            android:inputType="number"
            android:ems="1"
            android:id="@+id/editText4"
            android:layout_centerInParent="true"
            android:maxLength="1"
            android:numeric="integer"
            android:password="true"
            android:singleLine="true"
             />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:id="@+id/tv_password_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter password"
            android:visibility="invisible"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

</LinearLayout>