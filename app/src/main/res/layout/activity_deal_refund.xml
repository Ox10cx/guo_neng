<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/headbg">
        
     <ImageView
                android:id="@+id/back"
	            android:layout_width="50dp"
	            android:layout_height="wrap_content"
	            android:src="@drawable/arrow_left"
	            android:padding="10dp"
	            android:background="@drawable/null_btn_text"/>
        
        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/text_head"
            android:text="@string/order_detail_deal_title"/>
        
        <TextView 
            android:id="@+id/orderdetailTextState"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textColor="#FFFFFFFF"
            android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/order_detail_order_number"
            android:textColor="#FF0000"
            android:gravity="center"/>
        
        <TextView 
            android:id="@+id/orderid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FF0000"
            android:gravity="center"/>
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#666666"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="@string/order_detail_submit_time"
           android:textStyle="bold"
           android:gravity="center"/>
       
       <TextView 
           android:id="@+id/ordertime"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:textStyle="bold"
           android:gravity="center"/>
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd = "10dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd = "10dp">
        <TextView android:id="@+id/dealname"
            android:layout_width="0dp" 
           android:layout_height="wrap_content"
           android:layout_weight="1"
           />
        <TextView android:id="@+id/dealprice"
            android:layout_width="wrap_content" 
           android:layout_height="wrap_content"
           />
       </LinearLayout>
    

    
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/order_detail_total_price"
            android:textStyle="bold"
			android:layout_weight="1"
			android:gravity="start"/>
        
		 <TextView 
		     android:id="@+id/dealtotalprice"
		     android:layout_width="0dp"
		     android:layout_height="match_parent"
		     android:textStyle="bold"
		     android:textColor="@color/textbg_red"
		     android:layout_weight="1"
		     android:gravity="right"/>
        
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/shop_deal_refund_ways"/>
	<LinearLayout
	    android:id="@+id/orderdetailPayBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <Button
            android:id="@+id/zfb_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_alipay"
            android:background="@drawable/blue_btn_text"
            android:padding="10dp"
            android:textColor="@color/text_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>
        
        <Button
            android:id="@+id/bankcard_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_bankcard"
            android:background="@drawable/blue_btn_text"
            android:padding="10dp"
            android:textColor="@color/text_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        
        <Button
            android:id="@+id/shibi_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/system_shibi"
            android:background="@drawable/blue_btn_text"
            android:enabled="false"
            android:padding="10dp"
            android:textColor="@color/text_white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone"/>
        
    </LinearLayout>
    
    
</LinearLayout>
