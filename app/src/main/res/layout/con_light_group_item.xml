<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/text_white"
    android:orientation="vertical">

    <View
        android:id="@+id/group_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_10"
        android:background="@color/gray_bg" />

    <!--
        android:layout_marginLeft="@dimen/layout_size_5"
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_size_50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_isspread"
            android:layout_width="@dimen/layout_size_25"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/right_go" />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_isspread"
            android:layout_marginLeft="@dimen/layout_size_5"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textColor="#343434"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_addlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_size_50"
            android:src="@drawable/add_light" />
    </RelativeLayout>

    <!-- <View
         android:id="@+id/group_line2"
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="#f0f0f0" />-->

</LinearLayout>